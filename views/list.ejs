
    <%- include("header") -%>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <div class="box" id="heading"> 

        
        <h1 style="color: rgb(20, 79, 94);">To Do list </h1>
        <h1 style="color: rgb(97, 79, 55);"><%= x %> </h1>

    </div>

    <div class="box">


        <% newListItems.forEach(function(item){ %>
        <form action="/delete" method="post">
        <div class="item"> 
            
            
            <input type="checkbox" value="<%=item._id%>" name="checkBox" onchange="this.form.submit()">
            <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= x %>"> </input>
        </form>
        <% }) %>

        <form action="/" method="post" class="item">
       
            <input type="text" name="newItem" placeholder="Add new Item" autofocus autocomplete="off">
            <button type="submit" name="list" value="<%= x %>">+</button>
    
        </form>

    </div>
    
    <script src="app.js"></script>
    <%- include("footer") -%>
